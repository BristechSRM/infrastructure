{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "ApiGateway server",
  "Parameters": {
    "subnet": {
      "Type" : "String",
      "Default": "null",
      "Description": "The subnet to put it in"
    },
    "groupSet": {
      "Type" : "String",
      "Default": "null",
      "Description": "The main security group to apply"
    },
    "EIP": {
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "15",
      "Default": "null",
      "Description": "The Elastic IP"
    }
  },

  "Resources": {
    "apigateway" : {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "ImageId": "ami-f95ef58a",
        "InstanceType": "t2.micro",
        "KeyName": "api-gateway",
        "Tags": [
          {
            "Key": "Name",
            "Value": "api-gateway"
          }
        ],
        "NetworkInterfaces" : [
          {
            "AssociatePublicIpAddress": true,
            "DeviceIndex": 0,
            "GroupSet": [ { "Ref" : "groupSet" } ],
            "SubnetId": { "Ref" : "subnet" }
          }
        ]
      }
    },

    "apiEIPAssociation": {
      "Type": "AWS::EC2::EIPAssociation",
      "Properties": {
        "EIP": {
          "Ref": "EIP"
        },
        "InstanceId": {
          "Ref": "apigateway"
        }
      }
    }
  }
}
