{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Consul host",
  "Parameters": {
    "subnet": {
      "Type" : "String",
      "Default": "null",
      "Description": "The subnet to put it in"
    },
    "groupSet": {
      "Type" : "String",
      "Default": "null",
      "Description": "The main security group to apply"
    }
  },

  "Resources": {
    "consul" : {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "ImageId": "ami-f95ef58a",
        "InstanceType": "t2.micro",
        "KeyName": "pna-consul",
        "Tags": [
          {
            "Key": "Name",
            "Value": "consul"
          }
        ],
        "NetworkInterfaces" : [
          {
            "AssociatePublicIpAddress": true,
            "DeviceIndex": 0,
            "GroupSet": [ { "Ref" : "groupSet" } ],
            "SubnetId": { "Ref" : "subnet" }
          }
        ]
      }
    }
  }
}
