{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Paul's test stack",
  "Parameters": {
    "apiEIP": {
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "15",
      "Default": "null",
      "Description": "The Elastic IP"
    }
  },

  "Resources": {
    "pnaapigateway" : {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "ImageId": "ami-f95ef58a",
        "InstanceType": "t2.micro",
        "KeyName": "api-gateway",
        "Tags": [
          {
            "Key": "Name",
            "Value": "pna-api-gateway"
          }
        ],
        "NetworkInterfaces" : [
          {
            "AssociatePublicIpAddress": true,
            "DeviceIndex": 0,
            "GroupSet": [ "sg-7830b61f" ],
            "SubnetId": "subnet-488a9f11"
          }
        ]
      }
    },

    "apiEIPAssociation": {
      "Type": "AWS::EC2::EIPAssociation",
      "Properties": {
        "EIP": {
          "Ref": "apiEIP"
        },
        "InstanceId": {
          "Ref": "pnaapigateway"
        }
      }
    }
  }
}
