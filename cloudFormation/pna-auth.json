{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Paul's test stack",
  "Parameters": {
    "authEIP": {
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "15",
      "Default": "null",
      "Description": "The Elastic IP"
    }
  },

  "Resources": {
    "pnaauth" : {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "ImageId": "ami-f95ef58a",
        "InstanceType": "t2.micro",
        "KeyName": "auth",
        "Tags": [
          {
            "Key": "Name",
            "Value": "pna-auth"
          }
        ],
        "NetworkInterfaces" : [
          {
            "AssociatePublicIpAddress": true,
            "DeviceIndex": 0,
            "GroupSet": [ "sg-477cc620", "sg-3463d953" ],
            "SubnetId": "subnet-488a9f11"
          }
        ]
      }
    },

    "authEIPAssociation": {
      "Type": "AWS::EC2::EIPAssociation",
      "Properties": {
        "EIP": {
          "Ref": "authEIP"
        },
        "InstanceId": {
          "Ref": "pnaauth"
        }
      }
    }
  }
}
